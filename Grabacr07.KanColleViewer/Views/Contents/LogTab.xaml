    <DataGrid AutoGenerateColumns="False" 
              ClipToBounds="True" 
              CanUserDeleteRows="False" 
              CanUserAddRows="False"   
              ItemsSource="{Binding ContentBattleResult}" 
              ScrollViewer.CanContentScroll="True" 
              IsReadOnly="True" 
              AlternationCount="1" 
              CanUserSortColumns="False" 
              CanUserResizeColumns="True" 
              CanUserReorderColumns="True"
              HeadersVisibility="Column">
        
        <DataGrid.Resources>
            <Style TargetType="{x:Type DataGrid}">
                <Setter Property="AlternatingRowBackground" Value="{DynamicResource SemiactiveBackgroundBrushKey}"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{DynamicResource ActiveForegroundBrushKey}"/>
                <Setter Property="Margin" Value="10,10,10,10"/>
                <Setter Property="RowBackground" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrushKey}"/>
            </Style>
            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="Margin"
									Value="5,3" />
            </Style>
        </DataGrid.Resources>
        <!--<ItemsPanelTemplate>
            <VirtualizingStackPanel  IsVirtualizing="True" VirtualizationMode="Recycling" >
            </VirtualizingStackPanel>
        </ItemsPanelTemplate>-->
        <DataGrid.ColumnHeaderStyle>
            <Style TargetType="{x:Type DataGridColumnHeader}">
                <Setter Property="FontSize"
									Value="13" />
                <Setter Property="Margin"
									Value="0,0" />
                <Setter Property="OverridesDefaultStyle"
									Value="True" />
                <Setter Property="BorderThickness"
									Value="0,0,1,1" />
                <Setter Property="BorderBrush"
									Value="{DynamicResource BorderBrushKey}" />
                <Setter Property="Background"
									Value="{DynamicResource BackgroundBrushKey}" />

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type DataGridColumnHeader}">
                            <Grid>
                                <Border BorderThickness="{TemplateBinding BorderThickness}"
													BorderBrush="{TemplateBinding BorderBrush}"
													Background="{TemplateBinding Background}">
                                    <ContentPresenter Margin="{TemplateBinding Padding}" />
                                </Border>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </DataGrid.ColumnHeaderStyle>
        <DataGrid.CellStyle>
            <Style TargetType="{x:Type DataGridCell}">
                <Setter Property="BorderThickness"
									Value="0,0,0,0" />
                <Setter Property="BorderBrush"
									Value="{DynamicResource BorderBrushKey}" />
                <Setter Property="Foreground"
									Value="{DynamicResource ActiveForegroundBrushKey}" />
                <Setter Property="IsHitTestVisible" Value="False"/>
            </Style>
        </DataGrid.CellStyle>


        <DataGrid.Columns>
            <DataGridTemplateColumn Width="140">
                <DataGridTemplateColumn.Header>
                    <TextBlock Text="海域" />
                </DataGridTemplateColumn.Header>
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding BattleResult.QuestName, Mode=OneWay}"
												   Foreground="{DynamicResource ActiveForegroundBrushKey}"
												   Margin="5,3"/>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>

            <DataGridTemplateColumn Width="150">
                <DataGridTemplateColumn.Header>
                    <TextBlock Text="敵艦隊" />
                </DataGridTemplateColumn.Header>
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding BattleResult.EnemyTeam, Mode=OneWay}"
												   Foreground="{DynamicResource ActiveForegroundBrushKey}"
												   Margin="5,3"/>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>

            <DataGridTemplateColumn Width="100">
                <DataGridTemplateColumn.Header>
                    <TextBlock Text="ランク" />
                </DataGridTemplateColumn.Header>
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding BattleResult.Rank, Mode=OneWay}"
												   Foreground="{DynamicResource ActiveForegroundBrushKey}"
												   Margin="5,3"/>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>

            <DataGridTemplateColumn Width="140">
                <DataGridTemplateColumn.Header>
                    <TextBlock Text="ドロップ艦" />
                </DataGridTemplateColumn.Header>
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding BattleResult.DropShip, Mode=OneWay}"
												   Foreground="{DynamicResource ActiveForegroundBrushKey}"
												   Margin="5,3"/>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>

            <DataGridTemplateColumn Width="150">
                <DataGridTemplateColumn.Header>
                    <TextBlock Text="時間" />
                </DataGridTemplateColumn.Header>
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding BattleResult.Time, Mode=OneWay}"
												   Foreground="{DynamicResource ActiveForegroundBrushKey}"
												   Margin="5,3"/>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
        </DataGrid.Columns>
    </DataGrid>
